[core]
	excludesfile = /home/hayley/.gitignore_global
	autocrlf = input
[user]
	name = Hayley Swimelar
	email = hayley@linbit.com
[push]
	default = simple
[pull]
	rebase = true
[rerere]
	enabled = true
[color]
	ui = true
[alias]
	ci = commit
	lg = log --oneline --decorate --all --graph
	s = status -s
	vdiff = difftool

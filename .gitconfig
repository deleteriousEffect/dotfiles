[core]
	excludesfile = /home/hayley/.gitignore_global
	autocrlf = input
[user]
	name = Hayley Swimelar
	email = hayley@linbit.com
[push]
	default = simple
[pull]
	rebase = true
[rerere]
	enabled = true
[color]
	ui = true
[alias]
	ci = commit
	s = status -s
	lg = log --oneline --decorate --all --graph
  ck = checkout
	vdiff = difftool
[hub]
	protocol = https
[diff]
	tool = vimdiff
[difftool]
	prompt = false

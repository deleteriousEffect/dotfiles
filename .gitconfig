  ck = checkout
  cl = clone
  mb = merge --no-ff
  pl = pull
  ps = push
  rb = rebase
[hub]
	protocol = https
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[gitreview]
	username = hayswim
[rebase]
	autosquash = true
